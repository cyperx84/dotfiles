theme = Monokai Remastered
font-family = ZedMono NFM Bold
font-family-bold = Monaspace Radon ExtraBold
font-family-italic = Monaspace Radon Italic
font-family-bold-italic = Monaspace Krypton ExtraBold Italic
font-size = 16 
font-feature = "ss01"
font-feature = "ss02"
font-feature = "ss03"
font-feature = "ss04"
font-feature = "liga"

cursor-color = #00FF00
cursor-style = block_hollow
cursor-style-blink = true

mouse-hide-while-typing = true
window-decoration = false
background-opacity = 0.9
background-blur = false

macos-option-as-alt = true

# Terminal integration improvements  
shell-integration = zsh
shell-integration-features = cursor,sudo,title

macos-auto-secure-input = false
macos-secure-input-indication = false

# Keybinds
keybind = ctrl+l=unbind
keybind = cmd+shift+p=unbind
keybind = global:cmd+/=toggle_quick_terminal
keybind = "cmd+shift+s=toggle_secure_input"
keybind = shift+enter=text:\n

# Scrolling
keybind = super+alt+u=scroll_page_up
keybind = super+alt+d=scroll_page_down
keybind = alt+slash=scroll_page_up

# Split navigation (vim-like)
keybind = super+alt+h=goto_split:left
keybind = super+alt+j=goto_split:down
keybind = super+alt+k=goto_split:up
keybind = super+alt+l=goto_split:right

# Split resizing (vim-like)
keybind = super+alt+shift+h=resize_split:left,10
keybind = super+alt+shift+j=resize_split:down,10
keybind = super+alt+shift+k=resize_split:up,10
keybind = super+alt+shift+l=resize_split:right,10

# Ghostty Custom shaders
custom-shader = shaders/cursor_smear.glsl
